<style>
    @media print {
        #customer-print-area {
            display: flex;
        }

        .btn {
            display: none;
        }
    }
</style>
<%- include('./components/Navbar') %>

    <div id="customer-print-area" class="row row-cols-md-5 row-cols-1 row-cols-sm-1 g-4 mb-3">
        <% cusdata.forEach((cus,ind)=>{%>
            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <p>
                            Customer List
                            <%= ind+1 %>
                        </p>
                    </div>
                    <div class="card-body">
                        <div class="card-title">
                            Customer Licence
                        </div>
                        <p>
                            <%= cus.licence %>
                        </p>

                        <div class="btn-group gap-2">
                            <a href="/customers/<%= cus.id  %>" class="btn btn-primary">Edit</a>
                            <form action="/customers?_method=DELETE&id=<%= cus.id  %>" method="post">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <% }) %>
    </div>
    <div class="d-flex justify-content-center items-center gap-2">
        <button class="btn btn-danger py-1 px-3 rounded-pill text-white">Delete All</button>
        <button id="print_btn" class="btn btn-success p-2 rounded-pill text-white shadow-sm">Print</button>
    </div>
    <script>
        //printing 
        const prtContent = document.getElementById("customer-print-area").innerHTML;
        document.getElementById('print_btn').addEventListener('click', (e) => {
            const WinPrint = window.open('', '', 'left=0,top=0,width=1100,height=900,toolbar=0,scrollbars=0,status=0');

            WinPrint.document.write(prtContent);
            WinPrint.document.close();
            WinPrint.focus();
            WinPrint.print();
            WinPrint.close();
        });

    </script>